<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/deepPurple1"
        android:text="Large Text"
        android:id="@+id/caption_show"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:id="@+id/image_display"
        android:layout_below="@+id/caption_show"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/voice_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VoicePlay"
        android:textColor="@color/deepPurple1"
        android:padding="5dp"
        android:layout_below="@+id/image_display"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/map_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MapView"
        android:textColor="@color/deepPurple1"
        android:padding="5dp"
        android:layout_below="@+id/voice_play"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="btnBackOnClick"
        android:text="Go Back"
        android:id="@+id/back_to_main"
        android:layout_below="@+id/map_view"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>